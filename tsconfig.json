{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "Node16",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node16",
    

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* js */
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src"]
}
